---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';

const title = "Bike For Sale";
const description = "SANTA CRUZ Blur X01 / Carbon CC / 29 2020";
const pubDate = "2025-08-25";
---
<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      main {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 3em 1em;
        font-family: Arial, sans-serif;
        line-height: 1.6;
      }
      h1 {
        font-size: 2.5em;
        margin-bottom: 0.5em;
      }
      .price {
        font-size: 1.5em;
        color: #2337ff;
        margin-bottom: 1em;
      }
      .hero-image img,
      .gallery img {
        width: 100%;
        border-radius: 8px;
        margin-bottom: 1em;
      }
      .gallery {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1em;
      }
     .lightbox {
       display: none;
       position: fixed;
       top: 0;
       left: 0;
       width: 100%;
       height: 100%;
       background: rgba(0,0,0,0.8);
       justify-content: center;
       align-items: center;
       z-index: 9999;
     }
     .lightbox img {
       max-width: 90%;
       max-height: 90%;
       border-radius: 8px;
     }
      ul {
        margin-bottom: 1em;
      }
      footer {
        padding: 2em 1em;
        text-align: center;
        background: #f4f4f4;
        color: #333;
        margin-top: 3em;
      }
    </style>
  </head>
  <body>
    <main>
      <h1>{title}</h1>
      <div class="date">Posted: <time datetime={pubDate}>{pubDate}</time></div>
      <div class="hero-image">
        <img src="https://d1mgeijqpfaspl.cloudfront.net/uploads/bike/media/1789840/b67fb525-b20a-4e5c-adb2-b8a8c6a6dd1f.webp" alt="Santa Cruz Blur" />
      </div>
      <div class="price">Price: ‚Ç¨2,950</div>
      <hr />
