        <img src="https://d1mgeijqpfaspl.cloudfront.net/uploads/bike/media/1789840/3d8db38b-132c-4bbf-90e1-3dba30167f6f.webp" alt="Photo 7" class="clickable" />
        <img src="https://d1mgeijqpfaspl.cloudfront.net/uploads/bike/media/1789840/8a44418a-2fcc-4e07-88c5-064fbe47203d.webp" alt="Photo 8" class="clickable" />
      </div>

<script type="module">
  const lightbox = document.getElementById('lightbox');
  const lightboxImg = document.getElementById('lightbox-img');

  document.querySelectorAll('.gallery img').forEach(img => {
    img.addEventListener('click', () => {
      lightboxImg.src = img.src;
      lightbox.style.display = 'flex';
    });
  });

  // Expose globally so inline onclick can see it
  window.closeLightbox = () => {
    lightbox.style.display = 'none';
    lightboxImg.src = '';
  };
</script>

      <div id="lightbox" class="lightbox" onclick="closeLightbox()">
         <img id="lightbox-img" src="" alt="Expanded image" />
      </div>

    </main>

    <footer>
